@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
    <div class="bg-blue-500 text-white py-20">
        <div class="max-w-6xl mx-auto text-center">
            <h1 class="text-5xl font-bold mb-4">Discover & Book Your Favorite Concerts</h1>
            <p class="text-xl mb-8">Explore a wide range of concerts and book your tickets easily.</p>
            <a href="#concerts"
               class="bg-white text-blue-500 font-bold py-3 px-6 rounded-full shadow-lg hover:bg-gray-100 transition duration-300">
                Browse
                Concerts
            </a>
        </div>
    </div>

    <!-- Concerts Section -->
    <div class="max-w-6xl mx-auto py-12" id="concerts">
        <h2 class="text-3xl font-bold text-gray-800 text-center mb-8">Upcoming Concerts</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <!-- Concert Card 1 -->
            <div class="bg-white shadow-lg rounded-lg overflow-hidden">
                <img class="w-full h-48 object-cover" src="https://via.placeholder.com/400x300" alt="Concert Image">
                <div class="p-6">
                    <h3 class="text-lg font-semibold text-gray-800">The Weeknd Live</h3>
                    <p class="text-gray-600 mt-2">Madison Square Garden, 2024-08-20</p>
                    <div class="mt-4">
                        <a href="#" class="text-blue-500 hover:underline">Book Now</a>
                    </div>
                </div>
            </div>
            <!-- Concert Card 2 -->
            <div class="bg-white shadow-lg rounded-lg overflow-hidden">
                <img class="w-full h-48 object-cover" src="https://via.placeholder.com/400x300" alt="Concert Image">
                <div class="p-6">
                    <h3 class="text-lg font-semibold text-gray-800">Ariana Grande Tour</h3>
                    <p class="text-gray-600 mt-2">Staples Center, 2024-09-10</p>
                    <div class="mt-4">
                        <a href="#" class="text-blue-500 hover:underline">Book Now</a>
                    </div>
                </div>
            </div>
            <!-- Concert Card 3 -->
            <div class="bg-white shadow-lg rounded-lg overflow-hidden">
                <img class="w-full h-48 object-cover" src="https://via.placeholder.com/400x300" alt="Concert Image">
                <div class="p-6">
                    <h3 class="text-lg font-semibold text-gray-800">Taylor Swift World Tour</h3>
                    <p class="text-gray-600 mt-2">Wembley Stadium, 2024-10-15</p>
                    <div class="mt-4">
                        <a href="#" class="text-blue-500 hover:underline">Book Now</a>
                    </div>
                </div>
            </div>
            <!-- Additional concert cards can be added here -->
        </div>
    </div>
